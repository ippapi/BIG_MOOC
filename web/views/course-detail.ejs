<!DOCTYPE html>
<html lang="en">
<%- include('partials/header') %>
<body>
    <div class="dashboard-container">
        <!-- Header -->
        <header class="dashboard-header">
            <div class="header-content">
                <h1>MOOC Platform</h1>
                <div class="user-actions">
                    <span class="welcome-msg">Welcome, <%= userId %></span>
                    <a href="/logout" class="logout-btn">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                            <polyline points="16 17 21 12 16 7"></polyline>
                            <line x1="21" y1="12" x2="9" y2="12"></line>
                        </svg>
                        Logout
                    </a>
                </div>
            </div>
        </header>

        <!-- Main Content -->
        <main class="course-detail-container">
            <!-- Course Detail Section -->
            <section class="course-main">
                <div class="course-header">
                    <h1><%= course.name_vn %></h1>
                    <p class="course-field"><%= course.name %></p>
                </div>
                
                <div class="course-content">
                    <div class="course-description">
                        <h2>Field</h2>
                        <p><%= course.field %></p>
                        <h2>About This Course</h2>
                        <p><%= course.about %></p>
                        
                        <h2>Vietnamese Description</h2>
                        <p><%= course.about_vn %></p>
                    </div>
                    
                    <div class="course-actions">
                        <a href="/recommendations" class="back-btn">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M19 12H5M12 19l-7-7 7-7"></path>
                            </svg>
                            Back to Courses
                        </a>
                    </div>
                </div>
            </section>
            
            <!-- Recommended Courses Section -->
            <div id="recommendations" class="tab-content active">
                <div class="section-header">
                    <h2>Recommended Courses For You</h2>
                    <p>Based on your learning preferences and history</p>
                </div>
                
                <div class="courses-grid">
                    <% recommendedCourses.forEach(course => { %>
                    <div class="course-card">
                        <div class="course-badge">Recommended</div>
                        <div class="course-header">
                            <h3><%= course.name_vn %></h3>
                            <span class="course-score"><%= course.score.toFixed(2) %></span>
                        </div>
                        <p class="course-field"><%= course.field %></p>
                        <p class="course-desc"><%= course.about %></p>
                        <form action="/course/<%= course.course_id %>" method="GET" class="course-actions">
                            <button type="submit" class="enroll-btn">
                                Enroll
                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M5 12h14M12 5l7 7-7 7"></path>
                                </svg>
                            </button>
                        </form>
                    </div>
                    <% }); %>
                </div>
            </div>
        </main>
    </div>
</body>
</html>